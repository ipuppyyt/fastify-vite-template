{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./build",
      "rootDir": ".",
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["server", "shared"],
    "exclude": ["node_modules", "build", "dist", "public", "client"]
}